body{
	padding: 20px;
}

/* unlock page */
.help-block{
	margin: auto;
	text-align: center;
	color: red;
	font-weight: bolder;
}

/* view page*/

#book-div{
	background-color: grey;
	margin-top:20px;
}

#book-table{
	width: 90%;
	margin: auto;

}

#update{
	text-transform: capitalize;
}

#search{
	width: 60%;
	height: 32px;
	text-align: left;
	border-style: solid;
	border-radius: 5%;
	border-color: grey;
	font-weight: bolder;
	font-size: 15px
}

.text-info{
	background-color: white;
	margin: auto;
	margin-top: 10px;
	margin-bottom: 10px;
	border-radius: 4px;
	text-transform: uppercase;
	font-weight: bolder;
	text-align: center;
	width: 300px;
	}

#paginate-div{
	text-align: center;
}


thead{
		text-transform: uppercase;
		color: black;
		font-weight: bolder;
		text-align: center;
		font-family: 'Dosis', sans-serif;

}

.book-td{
	text-transform: capitalize;
	text-align: center;
	color: #000;
	font-family: 'Source Sans Pro', serif;
	font-weight: bolder;

}

#home-container{
	background-color: #002401;
	height: 100%;
}

.navbar{
	width: 100%
}

.nav-tabs > li > a{
	margin-right: 46px;
	margin-left: 36px;
	width: 100%;
}

.nav-tabs > li{
	float: none;
	display: inline-block;
	margin-right: 30px;
	letter-spacing: 2px;
	text-transform: uppercase;
	text-align: center;
	font-size: 18px;
	font-weight: bolder;
	width: 20%;
}

ul{
	text-align: justify;
}

.container > #header{
	background-color: #002401;
	height: 15%;
	color: white;
	font-family: tahoma;
	text-transform: uppercase;
	text-align: center;
	letter-spacing: 2px;
	font-weight: bolder;
}

